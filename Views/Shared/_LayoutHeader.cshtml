<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <title>@ViewBag.Title</title>
    <style>
        .field-validation-error
        {
            color: red;
        }
        .validation-summary-errors
        {
            color: red;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-dark" style="background-color:#102912;" ">
        <a class="navbar-brand ms-4" href="/Home/Index">@Strings.UNSC</a> @*Could replace with img*@
        <div class="">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/Accounts/Index">@Strings.Account</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Products/Index">@Strings.Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Categories/Index">@Strings.Categories</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Brands/Index">@Strings.Brands</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/About">@Strings.About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Contact">@Strings.Contact</a>
                </li>
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Accounts/Login">@Strings.Login</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Accounts/Logout">@Strings.Logout</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Accounts/MyProfile">@Strings.MyProfile</a>
                    </li>
                }
            </ul>
        </div>
        <div class="mx-auto text-white">
            @ViewBag.Message
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            @*<div class="col-2 text-white" style="background-color:#385935; min-height: 1050px; padding: 0px ">
                <div class="list-group">
                    @RenderSection("SideBarOptions", required: false)
                </div>
            </div>*@
            <div class="col-10" style="min-height:610px">
                <h2>@ViewBag.Title</h2>
                @RenderBody()
            </div>
        </div>
    </div>
</body>
