@model Product
@{
    ViewBag.Title = Strings.Details;
    Layout = "~/Views/Shared/_LayoutHeader.cshtml";
}

<table class="table">
    <tbody>
        <tr>
            <th>ID</th>
            <td>@Model.ID</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Cost</th>
            <td>@Model.Cost</td>
        </tr>
    </tbody>
</table>