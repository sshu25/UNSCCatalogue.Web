@model List<Product>
@{
    ViewBag.Title = Strings.Products;
    ViewBag.Message = Strings.ViewOfferedProducts;
}

<div class="card-group">
    @foreach (var item in Model)
    {
        <div class="card">
            <img class="card-img-top" src="data:image;base64, @item.Photo" alt="Card image cap"/>
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Price</p>
                <p class="card-text">
                    <small class="text-muted">@((item.Brand != null) ? item.Brand.Name : "")</small>
                </p>
                <p class="card-text">
                    <small class="text-muted">@((item.Category != null) ? item.Category.Name : "")</small>
                </p>
            </div>
        </div>
    }
</div>